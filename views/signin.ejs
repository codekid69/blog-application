<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>Sign In</title>
</head>

<body>
  <div class="position-absolute top-0 start-0 p-3">
    <a href="/" class="back-btn">‚Üê Keep exploring Annonymously</a>
  </div>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3">
          <div class="card-body">
            <h3 class="card-title text-center mb-4">Sign In - Bloggo</h3>

            <% if (typeof error !== "undefined") { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% } %>

            <form action="/user/signin" method="POST">
              <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required />
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required />
              </div>

              <div class="d-grid mb-3">
                <button type="submit" class="btn btn-dark">Sign In</button>
              </div>
            </form>

            <!-- Google Login Button -->
            <div class="d-grid mb-3">
              <a href="/auth/google" class="btn btn-outline-danger">
               <img src="https://www.vectorlogo.zone/logos/google/google-tile.svg" alt="Google" width="24" height="24" style="margin-right:8px;" />
                Sign in with Google
              </a>
            </div>

            <p class="mt-3 text-center">
              Don't have an account? <a href="/user/signup">Create one</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>

</html>
