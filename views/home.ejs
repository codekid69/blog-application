<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>All Blogs</title>
  <!-- Make sure Bootstrap CSS is included -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Styling -->
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background: linear-gradient(135deg, #1c1f29, #202c39); /* Dark techy gradient */
      color: #e1e1e1;
      overflow-x: hidden;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .card {
      border-radius: 15px; /* Rounded corners for the whole card */
      overflow: hidden;
      margin-bottom: 30px;
      background: rgba(255, 255, 255, 0.1);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: translateY(-10px);
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
    }

    .card-img-top {
      height: 200px;
      object-fit: cover;
      width: 100%;
      border-radius: 0; /* No rounding on the image */
    }

    .card-body {
      padding: 20px;
      background: rgba(0, 0, 0, 0.5);
      border-radius: 0; /* No rounded corners on the card body */
      display: flex;
      flex-direction: column;
      justify-content: space-between; /* Align content */
      height: 100%;
    }

    .card-title {
      font-size: 1.35rem;
      font-weight: 700;
      color: #f1f1f1;
      margin-bottom: 10px;
    }

    .card-text {
      color: #c0c0c0;
      font-size: 1rem;
      margin-bottom: 15px;
    }

    .btn-primary {
      background-color: #0a74da;
      border-color: #0a74da;
      font-weight: 600;
      padding: 10px 20px;
      border-radius: 50px;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: 800;
      color: #f1f1f1;
      text-align: center;
      margin-bottom: 50px;
      text-transform: uppercase;
    }

    .row {
      display: flex;
      flex-wrap: wrap;
      gap: 30px;
      justify-content: center;
    }

    .col-md-4 {
      display: flex;
      justify-content: center;
    }

    .no-blogs {
      font-size: 1.2rem;
      color: #ccc;
      text-align: center;
      font-weight: 600;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .card-img-top {
        height: 150px;
      }

      h1 {
        font-size: 2rem;
      }

      .card-title {
        font-size: 1.25rem;
      }

      .card-body {
        padding: 15px;
      }
    }

    /* Center the "Read More" button */
    .btn-container {
      display: flex;
      justify-content: center; /* Center the button */
      margin-top: 10px; /* Space between content and button */
    }
  </style>
</head>

<body>
  <%- include('./partials/navbar') %>

  <div class="container mt-5">
    <h1 class="mb-5">All Blogs</h1>

    <!-- Check if there are blogs -->
    <% if (blogs && blogs.length > 0) { %>
      <div class="row">
        <!-- Loop through blogs -->
        <% blogs.forEach(blog => { %>
          <div class="col-md-4">
            <div class="card blog-card">
              <!-- Blog Cover Image -->
              <img src="<%= blog.coverImageUrl && blog.coverImageUrl.startsWith('http') ? blog.coverImageUrl : 'https://res.cloudinary.com/demo/image/upload/v123456/default-image.jpg' %>" class="card-img-top" alt="<%= blog.title %>">


              <div class="card-body">
                <!-- Blog Title -->
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text"><%= blog.body.substring(0, 150) %>...</p>
                <!-- Add a container to center the button -->
                <div class="btn-container">
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read More</a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="no-blogs">No blogs available at the moment.</p>
    <% } %>
  </div>

  <!-- Include Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

  <%- include('./partials/scripts') %>
</body>

</html>
