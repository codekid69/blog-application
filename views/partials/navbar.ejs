        <% if (user) { %>
          <!-- User Icon (aligned to the right in desktop, inside hamburger in mobile) -->
          <a href="/user/friends" style="text-decoration: none;">
            <div class="position-relative">
              <img src="/images/useravatar.png" alt="user-icon"
