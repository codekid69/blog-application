<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <title>Profile Settings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
      html,
      body {
        height: 100%;
        margin: 0;
        background: linear-gradient(135deg, #1c1f29);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      body {
        display: flex;
        flex-direction: column;
      }

      main {
        flex: 1;
        /* Makes the main content take up available space */
        padding: 3rem 0;
        /* Adds vertical spacing */
      }

      footer {
        width: 100%;
        padding: 1.5rem 0;
        background-color: #f1f1f1;
        text-align: center;
        font-size: 0.9rem;
        color: #6c757d;
        position: relative;
        bottom: 0;
      }

      .profile-card {
  /* existing styles */
  padding: 2rem;
  border-radius: 1rem;
  box-shadow: 0 0 20px rgba(0, 0, 0, 1);
  max-width: 600px;
  margin: auto;
  display: block;
  color: white;
  text-align: center; /* Add this line to center the text and buttons */
}

.profile-card .btn {
  margin-top: 1rem;
  display: inline-block; /* Ensures buttons appear inline */
  margin-left: 0.5rem; /* Add space between buttons */
  margin-right: 0.5rem; /* Add space between buttons */
}

.profile-card .btn-group {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap; /* Ensure buttons wrap if they don‚Äôt fit in one row */
  gap: 1rem; /* Space between buttons */
}


      .profile-pic {
        width: 150px;
        height: 150px;
        object-fit: cover;
        object-position: center;
        border-radius: 50%;
        border: 4px solid #0d6efd;
      }

      h1 {
        text-align: center;
        font-weight: 600;
        color: #343a40;
        margin-bottom: 2rem;
      }

      .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
      }

      #loadingSpinner {
        display: none;
      }

      .edit-form {
        display: none;
      }

      .go-back-btn {
        margin-bottom: 1rem;
      }

      .form-label {
        font-weight: 500;
        color: #495057;
      }

      .btn {
        padding: 12px;
        font-size: 1rem;
      }

      .profile-card .btn {
        margin-top: 1rem;
      }

      .profile-name {
        font-size: 2rem;
        /* Large font size */
        font-weight: bold;
        /* Bold text */
        color: #f1f1f1;
        /* Light color for better contrast */
        text-align: center;
        /* Center align the text */
        margin-bottom: 1rem;
        /* Add some space below the name */
      }

      .profile-name span {
        color: #0d6efd;
        /* Blue color for the name */
      }
    </style>
</head>

<body>
  <%- include('./partials/navbar') %>

    <main class="container">
      <div class="container mt-5">
        <div class="go-back-btn mb-3">
          <a href="/" class="btn btn-secondary">‚Üê Go Back</a>
        </div>
        <div class="profile-card">
          <% if (friendRequest==='sent' ) { %>
            <div class="alert alert-success">
              Friend request sent successfully!
            </div>
            <% } %>
              <% if (friendRequest==='already' ) { %>
                <div class="alert alert-success">
                  Friend request sent Already!
                </div>
                <% } %>
                  <% if (!otherProfile) { %>
                    <h1 style="color: #fff;">Profile Settings</h1>
                    <% } %>
                      <!-- Profile Picture -->
                      <div class="mb-4 text-center">
                        <img src="<%= profileUser.profileImageUrl || '/images/useravatar.png' %>" alt="Profile Picture"
                          class="profile-pic mb-3" id="profilePicPreview">
                      </div>

                      <!-- Profile Information -->
                      <div id="profileInfo">
                        <div class="profile-name">
                          <p><strong></strong> <span>
                              <%= profileUser.name %>
                            </span></p>
                        </div>

                        <!-- <p><strong>Email:</strong> <%= profileUser.email %></p> -->
                        <% if (otherProfile) { %>
                          <% if (isFriend) { %>
                            <button class="btn btn-secondary" disabled>‚úÖ Friends</button>

                            <% } else if (hasReceivedRequest) { %>
                              <!-- This means profileUser sent request to current user -->
                              <form action="/user/friends/accept/<%= profileUser._id %>" method="POST" class="d-inline">
                                <button class="btn btn-success">Accept</button>
                              </form>
                              <form action="/user/friends/reject/<%= profileUser._id %>" method="POST" class="d-inline">
                                <button class="btn btn-danger">Decline</button>
                              </form>

                              <% } else if (hasSentRequest) { %>
                                <button class="btn btn-warning" disabled>üì§ Request Sent</button>

                                <% } else { %>
                                  <form action="/user/sendrequest/<%= profileUser._id %>" method="POST">
                                    <button class="btn btn-primary">‚ûï Add Friend</button>
                                  </form>
                                  <% } %>
                                    <% } %>

                                      <!-- Edit Button -->
                                      <% if (!otherProfile) { %>
                                        <button id="editBtn" class="btn btn-primary w-100">Edit Profile</button>
                                        <% } %>
                      </div>

                      <!-- Personal Info Form (Initially hidden) -->
                      <div id="profileFormContainer" class="edit-form">
                        <form id="profileForm" action="/user/update/<%= profileUser._id %>" method="POST"
                          enctype="multipart/form-data">
                          <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name"
                              value="<%= profileUser.name %>" required />
                          </div>

                          <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email"
                              value="<%= profileUser.email %>" required />
                          </div>

                          <!-- Profile Picture upload inside the form -->
                          <div class="mb-3">
                            <label for="profileImageUrl" class="form-label">Profile Picture</label>
                            <input type="file" class="form-control" id="profileImageUrl" name="profileImageUrl"
                              accept="image/*" />
                          </div>

                          <button type="submit" class="btn btn-primary w-100" id="submitBtn">
                            <span id="btnText">Save Changes</span>
                            <div id="loadingSpinner" class="spinner-border spinner-border-sm text-light" role="status">
                            </div>
                          </button>

                          <button type="button" class="btn btn-secondary w-100 mt-2" id="cancelBtn">Cancel</button>
                        </form>
                      </div>
        </div>
      </div>
    </main>

    <%- include('./partials/footer') %>
      <%- include('./partials/scripts') %>

        <script>
          const profilePicInput = document.getElementById('profileImageUrl');
          const profilePic = document.getElementById('profilePicPreview');
          const profileForm = document.getElementById('profileForm');
          const loadingSpinner = document.getElementById('loadingSpinner');
          const btnText = document.getElementById('btnText');
          const editBtn = document.getElementById('editBtn');
          const profileInfo = document.getElementById('profileInfo');
          const profileFormContainer = document.getElementById('profileFormContainer');
          const cancelBtn = document.getElementById('cancelBtn');

          // Update profile image preview when a file is selected
          profilePicInput.addEventListener('change', (event) => {
            const file = event.target.files[0];
            if (file) {
              const reader = new FileReader();
              reader.onload = function (e) {
                profilePic.src = e.target.result;
              };
              reader.readAsDataURL(file);
            }
          });

          // Show loading spinner when the form is submitted
          profileForm.addEventListener('submit', () => {
            btnText.textContent = "Saving...";
            loadingSpinner.style.display = "inline-block";
          });

          // Show the profile edit form and hide profile info
          editBtn.addEventListener('click', () => {
            profileInfo.style.display = 'none';
            profileFormContainer.style.display = 'block';
          });

          // Hide the profile edit form and show profile info when cancel is clicked
          cancelBtn.addEventListener('click', () => {
            profileFormContainer.style.display = 'none';
            profileInfo.style.display = 'block';
          });

          // document.getElementById('addFriendBtn').addEventListener('click', function () {
          //   // Delay the page reload for 3 seconds after clicking the button
          //   setTimeout(function () {
          //     location.reload(); // Refresh the page
          //   }, 3000); // 3000 ms = 3 seconds
          // });

        </script>
</body>

</html>